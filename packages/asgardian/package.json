{
  "name": "@nordic-ui/asgardian",
  "version": "0.3.0",
  "description": "A simple authorization library",
  "author": "Kevin Ã˜sterkilde <kevin@oesterkilde.dk>",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "NODE_NO_WARNINGS=1 vitest run --coverage",
    "lint": "eslint \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "diagnostics": "tsc --diagnostics",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "keywords": [
    "asgardian",
    "authorization",
    "auth",
    "authz",
    "ability",
    "acl",
    "rbac"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "devDependencies": {
    "@nordic-ui/eslint-config": "workspace:*",
    "@nordic-ui/typescript-config": "workspace:*",
    "@types/node": "^20",
    "@vitest/coverage-v8": "3.1.2",
    "tsup": "^7.1.0",
    "typescript": "5.8.3",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^3.1.2"
  }
}
