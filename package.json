{
  "name": "asgardian-mono",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:lib": "turbo run build --filter=@nordic-ui/asgardian",
    "build:docs": "turbo run build --filter=docs",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.2",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.13.2",
  "engines": {
    "node": ">=18"
  }
}
